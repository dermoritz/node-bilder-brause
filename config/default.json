{
    "server": {
        "host": "localhost",
        "port": 3050,
        "rootURLPath": "v1",
        "frontendPath": "frontend/dist"
    },
    "store": {
        "loadTreeOnStartup": false,
        "rootPath": "/ext/wd4/storage/fotos",
        "thumbnailPath": "/ext/wd4/storage/gallery",
        "thumbnailPathSplitDigits": 3,
        "thumbnailPathSplitCount": 3
    },
    "generator": {
        "server": {
            "network": true,
            "protocol": "ws",
            "host": "localhost",
            "port": 3055
        },
        "client": {
            "protocol": "ws",
            "host": "localhost",
            "port": 3055,
            "reconnectIdle": 2000,
            "maxThreads": 1,
            "imageSourceBaseURL": "http://localhost:3050/v1/media/original",
            "uploadBaseUrl": "http://localhost:3050/v1/upload"
        }
    },
    "frontend": {
        "staticsPath": "../../public",
        "viewsPath": "./views",
        "urlRoot": "/.",
        "title": "Bilder"
    },
    "digger" : {
        "thumbnailBaseURL": "http://localhost:3050/v1/media",
        "thumbnailSizeKey": "i",
        "startIndex": 28000
    },
